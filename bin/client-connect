#!/usr/bin/php
<?php

require_once dirname(__DIR__).'/vendor/autoload.php';

use Monolog\Logger;
use Monolog\Handler\SyslogHandler;
use Monolog\Formatter\LineFormatter;
use fkooman\VPN\Server\ConnectionLog;
use fkooman\Config\Reader;
use fkooman\Config\YamlFile;

try {
    $logger = new Logger('vpn-server-api');
    $syslog = new SyslogHandler('vpn-server-api', 'user');
    $formatter = new LineFormatter();
    $syslog->setFormatter($formatter);
    $logger->pushHandler($syslog);

    $reader = new Reader(
        new YamlFile(dirname(__DIR__).'/config/config.yaml')
    );

    $db = new PDO(
        $reader->v('Log', 'dsn'),
        $reader->v('Log', 'username', false),
        $reader->v('Log', 'password', false)
    );

    $connectionLog = new ConnectionLog($db);

    $logData = [];
    $envKeys = [
        'common_name',
        'time_unix',
        'ifconfig_pool_remote_ip',
        'ifconfig_ipv6_remote',
    ];

    foreach ($envKeys as $envKey) {
        $logData[$envKey] = getenv($envKey);
    }

    $logger->addInfo('client-connect', $logData);
    $connectionLog->connect($logData);
} catch (Exception $e) {
    // we do not want the connection to fail when we cannot log the 
    // connection
}
