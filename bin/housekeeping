require_once dirname(__DIR__).'/vendor/autoload.php';

use fkooman\Config\Reader;
use fkooman\Config\YamlFile;
use fkooman\VPN\Server\Log\ConnectionLog;
use fkooman\VPN\Server\Log\OtpLog;

try {
    $config = new Reader(
        new YamlFile(dirname(__DIR__).'/config/log.yaml')
    );

    $db = new PDO(
        $config->v('log', 'dsn'),
        $config->v('log', 'username', false),
        $config->v('log', 'password', false)
    );

    $connectionLog = new ConnectionLog($db);

    // remove all log entries that are older than 1 month
    $connectionLog->housekeeping(strtotime('today -31 days'));

    $db = new PDO(
        $config->v('otp', 'dsn'),
        $config->v('otp', 'username', false),
        $config->v('otp', 'password', false)
    );

    $otpLog = new OtpLog($db);

    // remove all OTP key entries that are older than 5 minutes
    $otpLog->housekeeping(strtotime('now -5 minutes'));
} catch (Exception $e) {
    echo $e->getMessage().PHP_EOL;
    exit(1);
}
