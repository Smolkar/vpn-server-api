# OpenVPN management sockets
openVpn:
    udp1194:
        listen: '::'
        proto: udp
        port: 1194
        managementPort: 11940
    udp1195:
        listen: '::'
        proto: udp
        port: 1195
        managementPort: 11941
    udp1196:
        listen: '::'
        proto: udp
        port: 1196
        managementPort: 11942
    tcp1194:
        # sniproxy will take care of IPv6, listening on IPv6 here will break
        # iOS OpenVPN clients
        listen: 0.0.0.0
        proto: tcp
        port: 1194
        managementPort: 11943

# CRL
crl:
    path: /var/lib/vpn-server-api

# API credentials
api:
    vpn-user-portal:
        scope: portal
        token: uvwxyz
    vpn-admin-portal:
        scope: admin
        token: uuvvww

# API credentials for access to remote services
remoteApi:
    # required to fetch the CRL and server config
    vpn-ca-api:
        uri: 'http://localhost:8008/api.php'
        token: aabbcc
