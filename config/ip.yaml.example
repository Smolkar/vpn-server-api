# IP address configuration

# stores IP addresses currently in use 
leaseDir: /var/lib/openvpn/pool

# contains the configurations of the CN
configDir: /var/lib/vpn-server-api/config

firewall:
    # allow connections to these ports on the VPN server itself
    dst_port:
        - TCP/443
        - TCP/80
        - TCP/22
        - UDP/1194

v4:
    # the range containing all the subsequent ranges mentioned below
    range: 10.42.42.0/24

    dns:
        - 8.8.8.8
        - 8.8.4.4

v6:
    prefix: 'fd00:4242:4242:1194::/60'

    dns:
        - '2001:4860:4860::8888'
        - '2001:4860:4860::8844'
