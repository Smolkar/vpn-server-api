# OpenVPN instance configuration
#
# **NOTE**:
# When modifying this file, do not forget to run 
# "vpn-server-api-server-config --reuse" and "vpn-server-api-generate-firewall"
# and restart the instances/firewall to activate the new configuration

# contains the configurations of the CN
configDir: /var/lib/vpn-server-api/config

firewall:
    # allow connections to these ports on the VPN server itself
    dst_port: [UDP/1194, UDP/1195, UDP/1196, TCP/22, TCP/80, TCP/443]

# enable 2FA on the server
twoFactor: false

# IPv4 range for clients
range: 10.42.42.0/24

# IPv6 range for clients
range6: 'fd00:4242:4242::/48'

# Specify the routes that are pushed to clients, if not specified or the list
# of routes is empty, the VPN will be used as the default gateway
routes: []
#routes: [10.10.10.0/16, 192.168.1.0/24, 'fd00:1234:5678:9999::/64']

# DNS servers to push to clients, only pushed when VPN is used as default 
# gateway
# https://developers.google.com/speed/public-dns/
dns: [8.8.8.8, 8.8.4.4, '2001:4860:4860::8888', '2001:4860:4860::8844']
# https://dns.watch/index
